<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Style.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="class_body" style="background:#111 url(http://thietbikhotoanthang.com/images/gianhang/background/20150720033619WT1EvWP0b2.jpg) fixed top center;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        @Html.Partial("_HeaderLayout")
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @Html.Partial("_FooterLayout")
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
