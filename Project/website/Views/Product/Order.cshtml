
@{
    ViewBag.Title = "Đặt hàng";
}
@using website.Models
@model website.Models.OrderProductModel

<div class="container_fullwidth">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h5 class="title contact-title">
                    Đặt hàng của chúng tôi
                </h5>
                <div class="clearfix">
                </div>
                <div class="clearfix">
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="contact-infoormation">
                            <h5>
                                Thông tin cửa hàng
                            </h5>
                           
                            <h5>Cửa Hàng Trung - Lộc - Phát</h5>
                            <h6>Chuyên kinh doanh</h6>
                            <br />
                            <h6>Phốt ben thủy lợi</h6>
                            <br />
                            <h6>Phốt dầu lò xo, phốt bơm</h6>
                            <br />
                            <h6>Sin hộp xe cơ giới, sin bơm</h6>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="ContactForm">
                            <h5>
                                Để lại thông tin của bạn
                            </h5>
                            @using (Html.BeginForm())
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>
                                            Tên bạn
                                            <strong class="red">
                                                *
                                            </strong>
                                        </label>
                                        @Html.TextBoxFor(model => model.Name, new { @class= "inputfild" })
                                        @*<input class="inputfild" type="text" name="">*@
                                    </div>
                                    <div class="col-md-6">
                                        <label>
                                            Email của bạn/ Zalo
                                            <strong class="red">
                                                *
                                            </strong>
                                        </label>
                                        @Html.TextBoxFor(model => model.Email, new {@class= "inputfild" })
                                        @*<input class="inputfild" type="email" name="">*@
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>
                                            Tên sản phẩm mong muốn
                                            <strong class="red">
                                                *
                                            </strong>
                                        </label>
                                        @*<input class="inputfild" type="text" name="">*@
                                        @Html.TextBoxFor(model => model.ProductName, new { @class= "inputfild" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>
                                            Số lượng
                                            <strong class="red">
                                                *
                                            </strong>
                                        </label>
                                        @*<input class="inputfild" type="number" />*@
                                        @Html.TextBoxFor(model => model.Count, new { @class = "inputfild", @type = "number" })
                                    </div>
                                    <div class="col-md-8">
                                        <label>
                                            Ngày cần lấy
                                            <strong class="red">*</strong>
                                        </label>
                                       
                                      @Html.TextBoxFor(model => model.DateRecieved, new { @class = "inputfild", @type = "date" })
                                    </div>
                                </div>
                               <div class="row">
                                   <div class="col-md-12">
                                       <label>
                                           Ghi chú ngắn gọn
                                       </label>
                                     @Html.TextAreaFor(model => model.Description, new { @class = "inputfild", @rows = "8"})
                                   </div>
                               </div>
                                  <div class="row">
                                      <label class="text-center">Chúng tôi sẽ liên hệ với bạn ngay khi có sản phẩm</label>
                                  </div> 

                                <button class="pull-right">
                                    Đặt hàng
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix">
        </div>
    </div>
</div>

